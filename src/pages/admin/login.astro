---
import Layout from '../../layouts/Layout.astro';
import astroLogo from '../../assets/astro.svg';
---

<Layout title="Login - Admin">
  <main class="min-h-screen flex flex-col items-center justify-center bg-[#FF6B6B]">
    <div class="bg-white p-12 border-4 border-black shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] text-center w-full max-w-md">
      <img src={astroLogo.src} alt="Logo" class="mx-auto mb-6" width="80" height="34" />
      <h1 class="text-3xl font-black text-black mb-2">Admin Login</h1>
      <p class="text-lg text-gray-700 mb-8">Masuk ke panel admin</p>
      <form class="flex flex-col gap-4 text-left">
        <label class="font-bold text-black" for="email">Email</label>
        <input id="email" name="email" type="email" required class="border-2 border-black px-4 py-2 focus:outline-none focus:border-[#FFD93D]" placeholder="Email" />
        <label class="font-bold text-black" for="password">Password</label>
        <input id="password" name="password" type="password" required class="border-2 border-black px-4 py-2 focus:outline-none focus:border-[#FFD93D]" placeholder="Password" />
        <button type="submit" class="mt-6 bg-[#FFD93D] text-black px-8 py-3 font-bold border-2 border-black hover:bg-[#FFE566] transition-colors duration-300">Login</button>
      </form>
      <a href="/" class="inline-block mt-8 text-[#FF6B6B] font-bold hover:underline">Kembali ke Beranda</a>
    </div>
  </main>
</Layout>
